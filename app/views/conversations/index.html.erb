
<br>
      <div class="row">
        
          <div class="col-xs-6">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title">您正洽詢想買的</h3>
              </div>
              <div class="panel-body">
                <ul>
                  <% @senderconversation.each do |senderconversation| %>
                  <li>
                      <img src="<%= senderconversation.item.picture %>" width="10%" height="10%">                                                        
                      <%= link_to senderconversation.item.name, conversation_path(senderconversation), remote: true %> 
                      賣家是<%= senderconversation.item.user.email %>
                  </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>

          <div class="col-xs-6">
              <div class="panel panel-success">
                <div class="panel-heading">
                  <h3 class="panel-title">您可能能賣出的</h3>
                </div>
                <div class="panel-body">
                  <ul id="readysell">
                    <% @recipientconversation.each do |recipientconversation| %>
                    <li>
                        <img src="<%= recipientconversation.item.picture %>" width="10%" height="10%">                                  
                        <%= link_to recipientconversation.item.name, conversation_path(recipientconversation), remote: true %> 
                        <%= recipientconversation.sender.email %> 詢問中        
                    </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>

          <div class="col-xs-12">
              <ul id="conversations-list">
                <% @conversations.each do |conversation| %>
                  <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
                <% end %>
              </ul>
            </div>
            
        </div>
