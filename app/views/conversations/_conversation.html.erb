<li>
    <div class="panel panel-default" data-conversation-id="<%= conversation.id %>">
      <div class="panel-heading">
        <%= link_to conversation.item.name, '', class: 'toggle-window' %>
        <%= link_to "x", close_conversation_path(conversation), class: "pull-right", remote: true, method: :post %>
      </div>

      <div class="panel-body" style="display: none;">


          <div class="row">
              <div class="col-xs-2"><img src="<%= conversation.item.picture %>" width="100%" height="100%"></div>
              <div class="col-xs-2"><%= conversation.item.category %></div>
              <div class="col-xs-2">狀態<br><%= conversation.item.status %></div>
              <div class="col-xs-2">賣家評價<br>＊＊＊＊</div>
              <div class="col-xs-2">價格<br><%= conversation.item.price %></div>
              <% if conversation.sender_id == user.id %>
              <div class="col-xs-2"><%= link_to "確認<br>購買".html_safe, "#", class: "btn btn-success btn-sm" %></div> 
              <% else %>
              <div class="col-xs-2"><%= link_to "確認<br>賣出".html_safe, "#", class: "btn btn-success btn-sm" %></div> 
              <% end %>
            </div>

            <hr>

        <div class="messages-list">
          <ul>
            <%= render 'conversations/conversation_content', messages: conversation.messages, user: user %>
          </ul>
        </div>
        <!-- <%= form_for [conversation, conversation.messages.new], remote: true do |f| %>
          <%= f.hidden_field :user_id, value: user.id %>
          <%= f.text_area :body, class: "form-control" %>
          <%= f.submit "Send", class: "btn btn-success" %>
        <% end %> -->
        <form class="new_message">
            <input name="conversation_id" type="hidden" value="<%= conversation.id %>">
            <input name="user_id" type="hidden" value="<%= user.id %>">
            <textarea name="body" id="body" class="input" style="resize: none; width:100%; max-height: 35px;"></textarea>
            <!-- <input type="submit" class="btn btn-success" id="submit" value="Send"> -->
          </form>
      </div>
    </div>
  </li>


