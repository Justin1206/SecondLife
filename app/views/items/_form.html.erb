    <%= form.text_field :description, id: :item_description %>
  </div>

  <div class="field">
    <%= form.label :商品狀態： %>
    <%= form.text_field :status, id: :item_status %>
  </div>

  <div class="field">
    <%= form.label :商品數量： %>
    <%= form.number_field :amount, id: :item_amount %>
  </div>

  <div class="field">
    <%= form.label :商品價格： %>
    <%= form.number_field :price, id: :item_price %>
  </div>

  <div class="field">
    <%= form.label :商品圖片： %>
    <%= form.text_field :picture, id: :item_picture %>
  </div>

  <div class="field">
    <%= form.label :商品分類： %>
    <%= form.text_field :category, id: :item_category %>
  </div>

