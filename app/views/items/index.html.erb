<div class="container" style="padding-top:30px;">
<h1>分類</h1>
<hr>
<div class="row">
<% @items.each do |item| %>
  <div class="col-lg-3 col-sm-3" style="padding-bottom:20px;">
	<div class="card">
  		<div class="card-body">
    	<h4 class="card-title"><%= item.name %></h4>
    	<img class="card-img-top" src="<%= item.picture %>" alt="Card image cap"><br>
      新台幣<%= item.price %><a>元</a><br>
			<%= link_to '顯示', item, class: "btn btn-primary btn-sm" %>
				<a class="btn btn-success btn-sm disable">想買</a>
				<%= link_to "想買",  favorite_item_path(item, type: "favorite"), class: "btn btn-success btn-sm", method: :put %>
			<!-- <%= link_to '想買', "#", class: "btn btn-success btn-sm" %>			 -->
  		</div>
	</div>
	</div>
<% end %>
</div>
</div>


