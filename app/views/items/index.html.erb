<div class="row">
			<div id="fh5co-board" data-columns>
					<% @items.each do |item| %>
					
							<div class="item">
								<%= link_to item, :remote => true, data: {toggle: "modal", target: "#myModal"} do %>		
								<div class="animate-box">
									<img src="<%= item.picture %>" alt="" width="100%">
								</div>
								<% end %>
										<div class="fh5co-desc">
											<h6><%= item.name %></h6>
											<h6><%= item.price %>元</h6>
											<%= truncate(item.description, length:15) %>
													<% if current_user.blank? %>
													<%= link_to '喜歡', new_session_path(:user), class: "btn btn-success btn-sm" %>
													<% else %>
															<% if current_user.favorites.include?(item) %>
																<%= link_to '不喜歡', favorite_item_path(item, type: "unfavorite"), class: "btn btn-danger btn-sm ", method: :put %>
															<% else %>
																<%= link_to '想買',  favorite_item_path(item, type: "favorite"), class: "btn btn-success btn-sm ", method: :put %>
															<% end %>
												<% end %>
										</div>
							</div>

					<% end %>
			</div>
</div>



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	</div> 
