  <style>
      .put-it-center{
          position: relative;
          margin: 0 auto;
          width: 400px;
      }
  
  </style>

<div class="put-it-center">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <legend>登入</legend>

<div class="form-group">
    <%= f.label :信箱 %><br />
    <%= f.email_field :email, autofocus: true, class: "col-lg-10 ; form-control" %>
</div>

<div class="form-group">
    <%= f.label :密碼%><br />
    <%= f.password_field :password, autocomplete: "off", class: "col-lg-10 ; form-control" %>
</div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "登入",  class: "btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>