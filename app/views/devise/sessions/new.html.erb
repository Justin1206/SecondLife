<style>
    
          @import url('https://fonts.googleapis.com/css?family=Open+Sans:400,700');
          
          .login-page
          {
            background-color:#f5f6f7
          }
          .login-page main
          {
            width:100%;
            max-width:400px;
            margin:20px auto 0%
          }
          .login-block
          {
            background-color:#f5f6f7;
            padding:40px;
            -webkit-box-shadow:0 3px 50px 0 rgba(0,0,0,.1);
            box-shadow:0 3px 50px 0 rgba(0,0,0,.1);
            text-align:center;
            border-radius:30px
          }
          .login-block h1,.login-block h6
          {
            font-family:Open Sans,sans-serif;
            color:#96a2b2;
            letter-spacing:1px
          }
          .login-block h1
          {
            font-size:22px;
            margin-bottom:10px;
            margin-top:10px
          }
          .login-block h6
          {
            font-size:11px;
            text-transform:uppercase;
            margin-top:0
          }
          .login-block .form-group
          {
            margin-top:1px;
            margin-bottom:1px;
          }
          .login-block .form-control,.login-block .form-control:focus,.login-block .input-group-addon,.login-block .input-group-addon:focus
          {
            background-color:transparent;
            border:none;
          }
          .login-block .form-control
          {
            font-size:15px;
            border-radius:0px;
          }
          .login-block input:-webkit-autofill
          {
            -webkit-box-shadow:0 0 0 1000px #fff inset;
            -webkit-text-fill-color:#818a91;
            -webkit-transition:none;
            -o-transition:none;
            transition:none;
          }
          .login-block .input-group-addon
          {
            color:#29aafe;
            font-size:15px;
            opacity:.5
          }
          .login-block .btn-block
          {
            margin-top:5px;
            padding:5px;
          }
          .login-block .hr-xs
          {
            margin-top:5px;
            padding-bottom:5px
          }
          .login-footer
          {
            margin-top:10px;
            opacity:.5;
            -webkit-transition:opacity .3s ease-in-out;
            -o-transition:opacity .3s ease-in-out;
            transition:opacity .3s ease-in-out
          }
          .login-footer:hover
          {
            opacity:1
          }
          
          @media (max-width:767px)
          {
            .login-page main
            {
              position:static;
              top:auto;
              left:auto;
              -webkit-transform:none;
              -o-transform:none;
              transform:none;
              padding:5px 5px
            }
          }
      </style>

<div class="login-page">
  <main>
  <div class="login-block">
      <h1>登入</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope ti-email"></i></span>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"帳號" %>
            
          </div>
        </div>
        
        <hr class="hr-xs">

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock ti-unlock"></i></span>
            <%= f.password_field :password, autocomplete: "off", class: "form-control",  placeholder:"密碼" %>
          </div>
        </div>

        <hr class="hr-xs">

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :記住我的帳號 %>
          </div>
        <% end -%>

        <%= f.submit "登入",  class: "btn btn-primary btn-block" %>

        <div class="login-footer">
            <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>

<% end %>
  