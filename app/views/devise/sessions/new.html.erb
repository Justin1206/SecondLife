<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<form class="form-horizontal">
  <fieldset>
    <legend>登入</legend>

<div class="form-group">

    <%= f.label :信箱, class: "col-lg-2 control-label" %><br />
    <%= f.email_field :email, autofocus: true, class: "col-lg-10 ; form-control" %>

</div>

<div class="form-group">

    <%= f.label :密碼, class: "col-lg-2 control-label"%><br />
    <%= f.password_field :password, autocomplete: "off", class: "col-lg-10 ; form-control" %>
    
</div>


  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "登入",  class: "btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
