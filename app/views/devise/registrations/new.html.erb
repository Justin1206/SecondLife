
<style>
    .put-it-center{
        position: relative;
        margin: 0 auto;
        width: 400px;
    }

</style>

<div class="put-it-center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <legend>註冊</legend>

  <div class="form-group">
    <%= f.label :信箱 %>
    <%= f.email_field :email, autofocus: true, class: "col-lg-10 ; form-control" %>
  </div>

  <div class="form-group" style="display-inline;">
    <%= f.label :密碼 %><em style: "float:right" >(最少需要六個字元)</em>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: "col-lg-10 ; form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :請再次輸入密碼 %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-lg-10 ; form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "註冊" ,class: "btn btn-primary btn-sm"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>